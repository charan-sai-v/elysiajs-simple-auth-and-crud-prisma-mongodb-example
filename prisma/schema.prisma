// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id       String   @id @default(cuid()) @map("_id") 
  name     String
  email    String   @unique 
  password String 
  posts    Post[]  
}

model Post {
  id      String   @id @default(cuid()) @map("_id")
  title  String
  content String
  author  User    @relation(fields: [authorId], references: [id])
  authorId String
}